
.dialog
  display block

  .dialog-window
    display inline-block
    position fixed
    top 50%
    right 50%
    transform translate(50%, -50%)
    z-index 101
    height 60vh
    width 60vw

    & > *
      height 100%
      width  100%

  .dialog-mask
    position fixed
    top 0
    left 0
    height 100%
    width 100%
    background black
    opacity 0.6
    overflow hidden
    z-index 100