@import url('https://fonts.googleapis.com/css?family=Rubik&display=swap');

$font-family = 'Rubik', sans-serif;
$dark-grey = rgba(59, 59, 59, 1);
$font-color = white;
$grey = grey
$pink = #e39ca4

html
  font-size: 62.5%;
  height: 100%
  width: 100%

  body
    margin 0
    direction: rtl;

  .app
    height: 100%
    display grid
    grid-template-rows 12vh 76vh 12vh

  header, footer
    background-color black;

    *
      color: $font-color;

  header
    display grid 
    grid-template-columns 25% 1fr 25% 
    max-height 12vh
    
    .ld-main-nav
      grid-column 2

  footer 
    display grid 
    grid-template-columns 7.5% 25% 7.5% 10% 40% 10%
    direction rtl
    align-items center
    max-height 12vh

    .ld-newsletter-wrapper
      grid-column 2
      height 6em
      justify-self: center

    .ld-social-nav
      grid-column 5

*
  font-family: $font-family;